<!-- app/views/articles/new.html.erb -->

<h1>New Article</h1>
<%= form_with(model: @article) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
<%= link_to "Back", articles_path %>
